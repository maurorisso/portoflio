---
import Footer from "@/components/Shared/Footer.astro";
import Navbar from "@/components/Shared/Navbar.astro";
import "@fontsource-variable/bricolage-grotesque";
import { SEO } from "astro-seo";

import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Mauro Risso's portfolio - Frontend Engineer" } =
  Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <SEO title={title} description={description} />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="bg-black text-zinc-100 antialiased text-sm">
    <main class="mx-auto max-w-2xl px-4 py-16">
      <header class="mb-8">
        <h1 class="text-lg font-normal text-zinc-100 mb-8">Mauro Risso</h1>
      </header>
      <slot />
      <footer class="mt-8">
        <div class="flex gap-6">
          <a
            href="https://github.com/maurorisso"
            class="text-zinc-100 hover:underline transition-colors">GitHub↗</a
          >
          <a
            href="https://linkedin.com/in/maurorisso"
            class="text-zinc-100 hover:underline transition-colors"
            >LinkedIn↗</a
          >
          <a
            href="#"
            onclick="event.preventDefault(); this.textContent = 'me[at]maurorisso.com'"
            class="text-zinc-100 hover:underline transition-colors">Email↗</a
          >
        </div>
      </footer>
    </main>
    <!-- <Footer /> -->

    <style is:global>
      :root {
        color-scheme: dark;
      }

      html {
        font-family: "Geist Mono", monospace;
        background: #000;
        background-size: 224px;
        letter-spacing: -0.03em;
      }

      body {
        min-height: 100vh;
      }

      code {
        font-family: "Geist Mono", monospace;
      }

      a {
        text-decoration-thickness: from-font;
      }
    </style>
  </body>
</html>
