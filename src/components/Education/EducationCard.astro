---
export type Props = {
  name: string;
  type: string;
  field: string;
  date: string;
  logo: ImageMetadata;
  location?: string;
  description: string;
  thesis?: string;
  courses: string[];
};

const { name, type, field, date, description, logo, thesis, courses } =
  Astro.props;
import { Image } from "astro:assets";
import CourseItem from "./CourseItem.astro";
---

<div class="flex gap-2 w-full">
  <Image src={logo} alt={name} width={100} class="rounded-md object-contain" />
  <div class="">
    <div class="flex justify-between w-full">
      <h1 class="text-3xl font-semibold">{name}</h1>
    </div>

    <div class="flex gap-2 w-full">
      <p>{type}</p>
      <span>-</span>
      <p>{field}</p>
    </div>
    <p class="text-white/60 text-sm">{date}</p>

    <p>{description}</p>
    <div>
      {
        thesis && (
          <div>
            <span class="text-lg ">Thesis: </span>
            <span class="text-white/90 ">{thesis}</span>
          </div>
        )
      }
    </div>
    <div class="flex gap-2 mt-2">
      {courses.map((course) => <CourseItem>{course}</CourseItem>)}
    </div>
  </div>
</div>
