---
type Props = {
  title: string;
  description: string;
  link: string;
  class: string;
};

const { title, description, link, class: className } = Astro.props;
---

<a
  class:list={["child-component", className]}
  class="bg-foreground rounded-xl p-6 flex gap-2 justify-center align-middle hover:bg-primary/50 transition-colors duration-200 ease-in-out"
  href={link}
>
  <h2>{title}</h2>
  <p>{description}</p>
</a>
