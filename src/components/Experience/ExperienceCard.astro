---
import TagItem from "../Shared/TagItem.astro";

export type ExperienceProps = {
  description?: string;
  bulletPoints?: string[];
  type?: string;
  title: string;
  company: string;
  date: string;
  location: string;
  tags: string[];
};

const { description, type, title, company, date, location, tags } = Astro.props;
---

<div
  class="border flex flex-col justify-center items-start rounded-md border-slate-800 p-5 gap-2 flex-1 w-full"
>
  <div>
    <div class="text-2xl">{title}</div>
    <div class="">{company}</div>
  </div>

  <div class="flex gap-2 text-sm">
    <div>{date}</div>
    <span class="font-bold text-primary font-xl">·</span>
    <div>{location}</div>
    {
      type && (
        <>
          <span class="font-bold text-primary font-xl">·</span>
          <div>{type}</div>
        </>
      )
    }
  </div>

  <p>{description}</p>
  <div class="flex gap-2">
    {tags.map((tag: string) => <TagItem> {tag} </TagItem>)}
  </div>
</div>
