---
import Layout from "../../layouts/Layout.astro";

const links = [
  {
    title: "Maillab",
    url: "https://maillab.io",
    description: "Cold Email Analysis and Outreach",
  },
  {
    title: "Goa Stack",
    url: "https://goastack.vercel.app",
    description: "SaaS-ready full-stack Next.js template",
  },
  {
    title: "Court of Founders",
    url: "https://courtoffounders.com",
    description: "Padel Community for Founders",
  },
];
---

<Layout title="Links | Mauro Risso">
  <main>
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mt-16">
          Some Stuff I am Working On
        </h1>
      </div>

      <div class="space-y-4">
        {
          links.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group block p-6 border border-gray-700 rounded-lg"
            >
              <div class="flex items-center">
                <div>
                  <h2 class="text-xl font-semibold text-white mb-1">
                    {link.title}
                  </h2>
                  <p class="text-gray-400 group-hover:text-gray-300">
                    {link.description}
                  </p>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
